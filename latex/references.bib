	urldate = {2019-10-11},
	journal = {International Journal of Hygiene and Environmental Health},
	author = {Garn, Joshua V. and Sclar, Gloria D. and Freeman, Matthew C. and Penakalapati, Gauthami and Alexander, Kelly T. and Brooks, Patrick and Rehfuess, Eva A. and Boisson, Sophie and Medlicott, Kate O. and Clasen, Thomas F.},
