	author = {Saxton, Ronald E. and Yeasmin, Farzana and Alam, Mahbub Ul and Al-Masud, Abdullah and Dutta, Notan Chandra and Yeasmin, Dalia and Luby, Stephen P. and Unicomb, Leanne and Winch, Peter J.},
