	journal = {Social Science and Medicine},
	author = {Sclar, G. D. and Penakalapati, G. and Caruso, B. A. and Rehfuess, E. A. and Garn, J. V. and Alexander, K. T. and Freeman, M. C. and Boisson, S. and Medlicott, K. and Clasen, T.},
	month = nov,
	year = {2018},
	pmid = {30316053},
	note = {Publisher: Elsevier Ltd},
	keywords = {Conceptual model, Mental well-being, Open defecation, Privacy, Qualitative synthesis, Safety, Sanitation, Social well-being},
	pages = {121--134},
}

@article{schouten_communal_2010,
